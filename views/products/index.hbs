{{#extends 'base'}}

{{#block 'content'}}
<h1>Products List</h1>
<div>
    <a href="/products/create" class="btn btn-success mb-3">Create</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Category
            </th>
            <th>
                Cost
            </th>
            <th>
                Description
            </th>
            <th>Tags</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.category.name}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.description}}</td>
            <td>
                {{#each this.tags}}
                <span class="badge badge-pill badge-primary">{{this.name}}</span>
                {{/each}}
            </td>
            <td>
                {{#if this.image_url}}
                <img class="img-fluid" src="{{this.image_url}}"/>
                {{/if}}
            </td>

            <td>
                <a href="/products/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/products/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>

        </tr>
        {{/each}}

    </tbody>

</table>



{{/block}}

{{/extends}}